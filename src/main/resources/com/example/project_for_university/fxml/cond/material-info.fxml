<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" stylesheets="@../../styles/shared.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_for_university.controllers.material.MaterialInfoController">
   <children>
      <VBox spacing="20.0" styleClass="form-wrapper">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label styleClass="bold-text" text="Создание артикула" />
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label text="Название артикула: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox fillHeight="false" spacing="10.0">
                     <children>
                        <TextField fx:id="name_field" prefHeight="30.0" prefWidth="373.0" promptText="артикул" HBox.hgrow="ALWAYS" />
                        <Button fx:id="upload_photo_btn" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#upload_photo_btn_clicked" prefWidth="118.0" styleClass="btn-blue-outlined" text="Загрузить фото">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label text="Описание:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="comments_area" prefHeight="210.0" promptText="описание артикула" wrapText="true" />
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="back_btn" mnemonicParsing="false" onMouseClicked="#back_btn_clicked" prefWidth="150.0" styleClass="btn-red-filled" text="&lt; Назад">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="next_btn" mnemonicParsing="false" onMouseClicked="#next_btn_clicked" prefWidth="150.0" styleClass="btn-blue-filled" text="Готово">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="page-wrapper" />
      <String fx:value="sky-blue-background" />
      <String fx:value="min-window-height" />
   </styleClass>
</VBox>
