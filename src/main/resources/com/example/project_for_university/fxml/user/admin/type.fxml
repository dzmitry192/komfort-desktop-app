<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" fillWidth="false" stylesheets="@../../../styles/shared.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_for_university.controllers.user.admin.TypeController">
   <children>
      <VBox prefWidth="500.0" spacing="10.0" styleClass="form-wrapper">
         <children>
            <ScrollPane fitToWidth="true" styleClass="white-scroll-pane" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <content>
                  <TableView fx:id="table_types" style="-fx-background-color: white;">
                    <columns>
                      <TableColumn fx:id="col_name" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="1.0" text="Название типа" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </ScrollPane>
            <VBox spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="btn_add" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#btn_add_clicked" prefHeight="0.0" styleClass="btn-blue-filled" text="Добавить" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btn_change" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#btn_change_clicked" prefHeight="0.0" styleClass="btn-blue-outlined" text="Изменить" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btn_delete" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#btn_delete_clicked" prefHeight="0.0" styleClass="btn-red-outlined" text="Удалить" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <Button fx:id="btn_back" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#btn_back_clicked" styleClass="btn-red-filled" text="&lt; Назад" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="sky-blue-background" />
      <String fx:value="page-wrapper" />
   </styleClass>
</VBox>
