<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" stylesheets="@../../styles/shared.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_for_university.controllers.user.SignupController">
   <children>
      <VBox maxWidth="360.0" prefWidth="360.0" styleClass="form-wrapper" stylesheets="@../../styles/shared.css">
         <children>
            <Label styleClass="bold-text" stylesheets="@../../styles/shared.css" text="Регистрация">
               <font>
                  <Font name="Academy Engraved LET Plain:1.0" size="21.0" />
               </font>
            </Label>
            <VBox spacing="10.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="ФИО" />
                        <TextField fx:id="fio_tf" prefHeight="42.0" promptText="Иван Иванович Иванов" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Электронная почта" />
                        <TextField fx:id="email_tf" prefHeight="42.0" promptText="example@gmail.com" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Пароль" />
                        <TextField fx:id="password_tf" prefHeight="42.0" promptText="password123" />
                     </children>
                  </VBox>
                  <Label fx:id="status_lbl" styleClass="error-text" stylesheets="@../../styles/shared.css" />
               </children>
               <padding>
                  <Insets bottom="18.0" top="35.0" />
               </padding>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Button fx:id="signup_btn" mnemonicParsing="false" onMouseClicked="#signup_btn_clicked" prefHeight="30.0" prefWidth="300.0" styleClass="btn-blue-filled" stylesheets="@../../styles/shared.css" text="Зарегистрироваться" />
                  <Button fx:id="back_btn" mnemonicParsing="false" onMouseClicked="#back_btn_clicked" prefHeight="30.0" prefWidth="300.0" styleClass="btn-blue-outlined" stylesheets="@../../styles/shared.css" text="Войти в аккаунт" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="min-window-height" />
      <String fx:value="sky-blue-background" />
      <String fx:value="page-wrapper" />
   </styleClass>
</VBox>
